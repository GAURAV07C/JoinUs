{
  "extends": "@joinUs/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": "../web",
    "paths": {
      "@/*": [
        "../web/*"
      ],
      "@joinUs/ui/*": [
        "../../packages/ui/src/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "../web/**/*.ts",
    "../web/**/*.tsx",
    "../web/.next/types/**/*.ts",
    "../web/next-env.d.ts",
    "../web/next.config.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "../web/node_modules"
  ]
}
